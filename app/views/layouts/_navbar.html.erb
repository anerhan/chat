<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Websocket Chat', root_path, class: 'navbar-brand'%>
    </div>

      <div class="collapse navbar-collapse pull-right">
        <ul class="nav navbar-nav">
          <% if !signed_in? %>
            <li>
              <%= link_to anonymous_sign_in_path do %>
                Sign (up & in) like Anonymous
                <span class="glyphicon glyphicon-log-in"></span>
              <% end %>
            </li>
            <li>
              <%= link_to sign_up_path do %>
                Sign in/up like Operator
                <span class="glyphicon glyphicon-log-in"></span>
              <% end %>
            </li>
          <% else %>
            <li><%= link_to current_user.full_name, room_index_path %></li>
            <li>
              <%= link_to sign_out_path do %>
                <span class="glyphicon glyphicon-log-out"></span>
                Sign Out
              <% end %>
           </li>
          <% end %>
        </ul>
      </div>

  </div>
</div>
